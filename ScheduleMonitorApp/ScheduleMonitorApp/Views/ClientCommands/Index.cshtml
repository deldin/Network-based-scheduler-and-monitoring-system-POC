@model IEnumerable<SchedulerMonitorDataEntities.Entities.ClientCommand>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @Class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Client")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Command)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsScheduled)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsExecuted)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayName(ViewData["ClientName"].ToString())
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Command)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsScheduled)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsExecuted)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ClientCommandId }, new { @Class = "btn btn-primary" })
            @Html.ActionLink("Details", "Details", new { id = item.ClientCommandId }, new { @Class = "btn btn-primary" })
            @Html.ActionLink("Delete", "Delete", new { id = item.ClientCommandId }, new { @Class = "btn btn-primary" })
            @Html.ActionLink("View logs", "Index", "ClientCommandLog", new { clientCommandId = item.ClientCommandId }, new { @Class = "btn btn-info" })
        </td>
    </tr>
}
    
</table>
<p>
    @Html.ActionLink("Clients Home", "Index", "Client", null, new { @Class = "btn btn-warning" })
</p>